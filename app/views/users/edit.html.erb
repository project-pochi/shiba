<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :nickname %>
      <%= f.text_field :nickname, class: 'form-control' %>
      <%= f.submit "Save nickname changes", class: "btn btn-primary" %>
    <% end %>

    <%= form_for(@user) do |f| %>
      <%= f.label :encrypted_email_address %>
      <%= f.email_field :encrypted_email_address, class: 'form-control' %>
      <%= f.submit "Save email changes", class: "btn btn-primary" %>
    <% end %>

    <%= form_for(@user) do |f| %>
      <%= f.label :encrypted_phone_number %>
      <%= f.email_field :encrypted_phone_number, class: 'form-control' %>
      <%= f.submit "Save phone number changes", class: "btn btn-primary" %>
    <% end %>

    <%= form_for(@user) do |f| %>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <%= f.submit "Save password changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
